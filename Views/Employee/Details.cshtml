@model Gestion.Models.User

@{
    ViewData["Title"] = "Détails Employé";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Styles personnalisés complémentaires */
        :root {
            --primary-color: #3b82f6;
            --secondary-color: #10b981;
            --accent-color: #8b5cf6;
            --card-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .gradient-bg {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-left: 5px solid var(--primary-color);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: var(--card-shadow);
            }

        .info-item {
            border-bottom: 1px solid #e5e7eb;
            padding: 1rem 0;
            transition: background-color 0.2s;
        }

            .info-item:hover {
                background-color: #f9fafb;
                border-radius: 0.375rem;
            }

            .info-item:last-child {
                border-bottom: none;
            }

        .role-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .admin-role {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .manager-role {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .employee-role {
            background-color: #d1fae5;
            color: #065f46;
        }

        .user-role {
            background-color: #f3e8ff;
            color: #6b21a8;
        }

        .btn-custom {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            border-radius: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-secondary {
            background-color: #6b7280;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #4b5563;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
            }

        .btn-edit {
            background-color: var(--primary-color);
            color: white;
        }

            .btn-edit:hover {
                background-color: #2563eb;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            }

        .header-icon {
            width: 4rem;
            height: 4rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            color: white;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        }

        .user-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            font-weight: bold;
            margin: 0 auto 1.5rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
            border: 4px solid white;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        @@media (max-width: 640px) {
            .card

        {
            margin: 0 -1rem;
            border-radius: 0;
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            font-size: 2rem;
        }

        }
    </style>
</head>
<body class="gradient-bg p-4 md:p-8">
    <div class="max-w-4xl mx-auto fade-in">
        <!-- En-tête avec titre et navigation -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <div class="header-icon inline-block">
                    <i class="fas fa-user-tie text-2xl"></i>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mt-2">Détails de l'Employé</h1>
                <p class="text-gray-600 mt-2">Informations détaillées sur l'utilisateur</p>
            </div>

            <div class="mt-4 md:mt-0">
                <a class="btn-custom btn-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left"></i>
                    Retour à la liste
                </a>
            </div>
        </div>

        <!-- Carte principale des informations -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden card">
            <div class="p-1 bg-gradient-to-r from-blue-500 to-purple-600"></div>

            <div class="p-6 md:p-8">
                <!-- Avatar utilisateur -->
                @if (!string.IsNullOrEmpty(Model.Username))
                {
                    <div class="user-avatar">
                        @Model.Username[0].ToString().ToUpper()
                    </div>
                }
                else
                {
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                }

                <!-- Nom d'utilisateur -->
                <div class="text-center mb-8">
                    <h2 class="text-2xl font-bold text-gray-800">@Model.Username</h2>
                    <p class="text-gray-600">Nom d'utilisateur</p>
                </div>

                <!-- Informations détaillées -->
                <div class="space-y-4">
                    <!-- Email -->
                    <div class="info-item p-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-4">
                                <i class="fas fa-envelope text-blue-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Adresse email</p>
                                <p class="text-lg font-medium text-gray-800">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <!-- Rôle -->
                    <div class="info-item p-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center mr-4">
                                <i class="fas fa-user-shield text-green-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Rôle</p>
                                <div class="mt-1">
                                    @{
                                        string badgeClass = "user-role";
                                        if (Model.Role?.ToLower() == "admin")
                                        {
                                            badgeClass = "admin-role";
                                        }
                                        else if (Model.Role?.ToLower() == "manager")
                                        {
                                            badgeClass = "manager-role";
                                        }
                                        else if (Model.Role?.ToLower() == "employee")
                                        {
                                            badgeClass = "employee-role";
                                        }
                                    }
                                    <span class="role-badge @badgeClass">
                                        <i class="fas fa-user-tag mr-1"></i>
                                        @Model.Role
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Date de création -->
                    <div class="info-item p-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center mr-4">
                                <i class="fas fa-calendar-plus text-purple-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Date de création du compte</p>
                                <p class="text-lg font-medium text-gray-800">@Model.CreatedAt</p>
                            </div>
                        </div>
                    </div>

                    <!-- ID utilisateur (simulé) - CORRECTION ICI -->
                    <div class="info-item p-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-yellow-100 flex items-center justify-center mr-4">
                                <i class="fas fa-id-card text-yellow-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">ID Utilisateur</p>
                                @{
                                    // Solution 1: Utiliser un ID existant dans le modèle (recommandé)
                                    string userIdDisplay = Model.Id.ToString() ?? "N/A";

                                    // Solution 2: Générer un ID court de façon sécurisée
                                    // string hash = Model.GetHashCode().ToString("X");
                                    // userIdDisplay = "#" + (hash.Length >= 8 ? hash.Substring(0, 8) : hash.PadLeft(8, '0'));
                                }
                                <p class="text-lg font-medium text-gray-800">@userIdDisplay</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="flex flex-col sm:flex-row gap-4 mt-10 pt-6 border-t border-gray-200">
                    <a class="btn-custom btn-secondary flex-1 text-center justify-center" asp-action="Index">
                        <i class="fas fa-arrow-left"></i>
                        Retour à la liste
                    </a>

                    <!-- Bouton d'édition (supposant l'existence d'une action Edit) -->
                    @if (Model.Id != null)
                    {
                        <a class="btn-custom btn-edit flex-1 text-center justify-center" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="fas fa-edit"></i>
                            Modifier l'employé
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Section informations supplémentaires -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 rounded-lg bg-blue-50 flex items-center justify-center mr-4">
                        <i class="fas fa-info-circle text-blue-500 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800">À propos</h3>
                </div>
                <p class="text-gray-600">
                    Cette page présente les informations détaillées de l'employé. Vous pouvez modifier les informations en utilisant le bouton "Modifier l'employé".
                </p>
            </div>

            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 rounded-lg bg-green-50 flex items-center justify-center mr-4">
                        <i class="fas fa-clock text-green-500 text-xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800">Dernière activité</h3>
                </div>
                <p class="text-gray-600">
                    Compte créé le @Model.CreatedAt
                </p>
            </div>
        </div>
    </div>

    <script>
        // Animation simple pour les éléments au chargement
        document.addEventListener('DOMContentLoaded', function() {
            const infoItems = document.querySelectorAll('.info-item');
            infoItems.forEach((item, index) => {
                item.style.animationDelay = `${index * 0.1}s`;
                item.classList.add('fade-in');
            });
        });
    </script>
</body>
</html>