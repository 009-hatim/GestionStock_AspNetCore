<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

<div class="container">
    <div style="width: 100%; max-width: 800px;">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1><i class="bi bi-trash3-fill me-3"></i>Supprimer l'Employé</h1>
            <p class="page-subtitle">Action irréversible - Cette suppression est définitive</p>
        </div>

        <!-- Main Warning Card -->
        <div class="warning-card">
            <!-- Warning Icon -->
            <div class="warning-icon-container">
                <div class="warning-icon">
                    <i class="bi bi-person-x-fill"></i>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="warning-message">
                ⚠️ Êtes-vous ABSOLUMENT sûr de vouloir supprimer cet employé ?
            </div>

            <!-- Critical Warning Banner -->
            <div class="warning-banner">
                <i class="bi bi-exclamation-octagon-fill"></i>
                <p>
                    <strong>CRITIQUE :</strong> Cette action supprimera définitivement le compte employé.
                    Toutes les données associées seront perdues et ne pourront pas être récupérées.
                </p>
            </div>

            <!-- Additional Warning Banner -->
            <div class="warning-banner" style="animation-delay: 0.5s;">
                <i class="bi bi-clock-history"></i>
                <p>
                    <strong>IMPACT IMMÉDIAT :</strong> L'employé perdra immédiatement l'accès au système.
                    Toutes les sessions actives seront terminées.
                </p>
            </div>

            <hr style="margin: 2.5rem 0; border: none; height: 2px; background: linear-gradient(90deg, transparent, var(--danger-border), transparent);" />

            <!-- Employee Details Section -->
            <div class="details-section">
                <h3 style="color: var(--danger-color); margin-bottom: 1.5rem; display: flex; align-items: center; gap: 1rem;">
                    <i class="bi bi-person-vcard"></i> Informations de l'Employé
                </h3>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-person-badge"></i>
                        Nom d'utilisateur
                    </div>
                    <div class="detail-value">
                        @Model.Username
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-envelope"></i>
                        Adresse Email
                    </div>
                    <div class="detail-value">
                        @Model.Email
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-key"></i>
                        Identifiant
                    </div>
                    <div class="detail-value">
                        @Model.Id
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="stats-container">
                <div class="stat-card">
                    <i class="bi bi-calendar-x"></i>
                    <div class="stat-value">Aujourd'hui</div>
                    <div class="stat-label">Date de Suppression</div>
                </div>
                <div class="stat-card">
                    <i class="bi bi-database-x"></i>
                    <div class="stat-value">100%</div>
                    <div class="stat-label">Données Supprimées</div>
                </div>
                <div class="stat-card">
                    <i class="bi bi-arrow-counterclockwise"></i>
                    <div class="stat-value">0%</div>
                    <div class="stat-label">Restauration Possible</div>
                </div>
            </div>

            <!-- Confirmation Section -->
            <div class="confirmation-section">
                <div class="confirmation-title">
                    <i class="bi bi-shield-check"></i>
                    Confirmation Requise
                </div>

                <div class="confirmation-check">
                    <input type="checkbox" id="confirmDelete" required>
                    <label for="confirmDelete">
                        Je comprends que cette action est irréversible et je confirme la suppression définitive de l'employé <strong>@Model.Username</strong>
                    </label>
                </div>
            </div>

            <!-- Button Container -->
            <div class="button-container">
                <form asp-action="Delete" id="deleteForm" style="flex: 1;">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                        <i class="bi bi-trash3-fill"></i>
                        Supprimer Définitivement
                    </button>
                </form>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i>
                    Annuler & Retour
                </a>
            </div>
        </div>

        <!-- Additional Warning Footer -->
        <div class="text-center mt-4" style="color: var(--text-secondary); font-size: 0.9rem; animation: fadeIn 1s ease-out 1.2s both;">
            <i class="bi bi-info-circle me-2"></i>
            Pour toute question concernant cette suppression, contactez l'administrateur système.
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Solution simple pour activer/désactiver le bouton
        document.addEventListener('DOMContentLoaded', function() {
            const deleteBtn = document.getElementById('deleteBtn');
            const confirmCheckbox = document.getElementById('confirmDelete');

            if (confirmCheckbox && deleteBtn) {
                // Initialiser l'état du bouton
                deleteBtn.disabled = !confirmCheckbox.checked;

                // Écouter les changements de la case à cocher
                confirmCheckbox.addEventListener('change', function() {
                    deleteBtn.disabled = !this.checked;

                    // Ajouter un effet visuel
                    if (this.checked) {
                        deleteBtn.style.opacity = '1';
                        deleteBtn.style.transform = 'scale(1)';
                        deleteBtn.style.cursor = 'pointer';
                        deleteBtn.style.animation = 'dangerGlow 2s infinite ease-in-out';
                    } else {
                        deleteBtn.style.opacity = '0.6';
                        deleteBtn.style.transform = 'scale(0.98)';
                        deleteBtn.style.cursor = 'not-allowed';
                        deleteBtn.style.animation = 'none';
                    }
                });
            }

            // Gestion simple de la soumission
            const deleteForm = document.getElementById('deleteForm');
            if (deleteForm) {
                deleteForm.addEventListener('submit', function(e) {
                    if (confirmCheckbox && !confirmCheckbox.checked) {
                        e.preventDefault();
                        alert('Veuillez cocher la case de confirmation avant de supprimer.');
                        confirmCheckbox.focus();
                        return false;
                    }

                    // Animation de chargement
                    if (deleteBtn) {
                        const originalText = deleteBtn.innerHTML;
                        deleteBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Suppression en cours...';
                        deleteBtn.disabled = true;

                        // Réinitialiser après 3 secondes (en cas d'erreur)
                        setTimeout(() => {
                            deleteBtn.innerHTML = originalText;
                            deleteBtn.disabled = false;
                        }, 3000);
                    }
                });
            }
        });
    </script>
}