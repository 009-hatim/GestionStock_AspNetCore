@model Gestion.Models.User

@{
    ViewData["Title"] = "Supprimer Employé";
}

<style>
    /* Variables CSS - Thème suppression */
    :root {
        --danger-color: #ef4444;
        --danger-hover: #dc2626;
        --danger-dark: #b91c1c;
        --danger-light: rgba(239, 68, 68, 0.1);
        --danger-border: rgba(239, 68, 68, 0.2);
        --danger-glow: rgba(239, 68, 68, 0.3);
        --warning-color: #f59e0b;
        --warning-hover: #d97706;
        --secondary-color: #6b7280;
        --secondary-hover: #4b5563;
        --card-bg: #ffffff;
        --border-color: #e5e7eb;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        --shadow-danger: 0 10px 25px -5px rgba(239, 68, 68, 0.2);
        --shadow-danger-lg: 0 20px 40px -10px rgba(239, 68, 68, 0.3);
        --radius-sm: 6px;
        --radius-md: 12px;
        --radius-lg: 16px;
        --radius-xl: 20px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --transition-slow: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Page Container */
    body {
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 50%, #fecaca 100%);
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', system-ui, -apple-system, 'Inter', sans-serif;
        position: relative;
        overflow-x: hidden;
    }

        /* Animated Background Pattern */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(239, 68, 68, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(239, 68, 68, 0.03) 0%, transparent 50%);
            z-index: -1;
            animation: floatBackground 20s infinite linear;
        }

    .container {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        animation: fadeIn 0.8s ease-out;
    }

    /* Header Styling */
    h1 {
        font-size: 2.75rem;
        font-weight: 900;
        color: var(--danger-color);
        margin-bottom: 0.5rem;
        position: relative;
        display: inline-block;
        padding-bottom: 1rem;
        text-shadow: 0 4px 8px rgba(239, 68, 68, 0.15);
        letter-spacing: -0.5px;
        animation: slideInDown 0.6s ease-out 0.1s both;
        background: linear-gradient(135deg, var(--danger-color) 0%, #dc2626 50%, #b91c1c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

        h1::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, var(--danger-color), #f97316);
            border-radius: 2px;
            animation: expandLine 0.8s ease-out 0.4s forwards;
            transform: scaleX(0);
            transform-origin: left;
        }

        h1::after {
            content: '🚨';
            position: absolute;
            right: -60px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 2rem;
            animation: warningFlash 2s infinite ease-in-out;
        }

    /* Subtitle */
    .page-subtitle {
        color: var(--text-secondary);
        font-size: 1.25rem;
        margin-bottom: 2.5rem;
        opacity: 0;
        animation: fadeInUp 0.6s ease-out 0.3s forwards;
        font-weight: 500;
    }

    /* Main Warning Card */
    .warning-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.98));
        border: 2px solid var(--danger-border);
        border-radius: var(--radius-xl);
        padding: 3rem;
        margin: 2rem 0;
        box-shadow: var(--shadow-danger-lg);
        animation: cardAppear 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s both;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
        transform-style: preserve-3d;
        perspective: 1000px;
    }

        .warning-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, var(--danger-color), #f97316, var(--danger-color));
            background-size: 200% 100%;
            animation: dangerShimmer 3s infinite linear;
            z-index: 1;
        }

        .warning-card::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(239, 68, 68, 0.03) 0%, transparent 70%);
            animation: pulseRing 8s infinite linear;
            z-index: 0;
        }

    /* Warning Icon Container */
    .warning-icon-container {
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
        animation: warningFloat 3s infinite ease-in-out;
    }

        .warning-icon-container::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 120px;
            height: 120px;
            background: radial-gradient(circle, rgba(239, 68, 68, 0.1) 0%, transparent 70%);
            border-radius: 50%;
            animation: pulse 2s infinite ease-in-out;
        }

    .warning-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--danger-color), var(--danger-dark));
        border-radius: 50%;
        box-shadow: 0 10px 30px var(--danger-glow);
        position: relative;
        z-index: 1;
        animation: warningSpin 20s infinite linear;
    }

        .warning-icon i {
            font-size: 3.5rem;
            color: white;
            animation: warningSpinReverse 20s infinite linear;
        }

    /* Warning Message */
    .warning-message {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        text-align: center;
        margin: 2rem 0;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.08), rgba(239, 68, 68, 0.04));
        border-radius: var(--radius-lg);
        border-left: 6px solid var(--danger-color);
        border-right: 6px solid var(--danger-color);
        animation: warningPulse 3s infinite ease-in-out;
        position: relative;
        overflow: hidden;
        line-height: 1.6;
    }

        .warning-message::before {
            content: '⚠️';
            position: absolute;
            right: 2rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 2.5rem;
            opacity: 0.2;
            animation: warningBounce 2s infinite ease-in-out;
        }

    /* Warning Banners */
    .warning-banner {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.12), rgba(239, 68, 68, 0.06));
        border: 2px solid var(--danger-border);
        border-radius: var(--radius-lg);
        padding: 1.5rem 2rem;
        margin: 2rem 0;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        animation: slideInRight 0.6s ease-out 0.4s both;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(5px);
    }

        .warning-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 6px;
            height: 100%;
            background: linear-gradient(to bottom, var(--danger-color), #f97316);
            border-radius: 3px 0 0 3px;
        }

        .warning-banner i {
            color: var(--danger-color);
            font-size: 2rem;
            flex-shrink: 0;
            filter: drop-shadow(0 2px 4px rgba(239, 68, 68, 0.2));
            animation: warningShake 3s infinite ease-in-out;
        }

        .warning-banner p {
            margin: 0;
            color: var(--text-primary);
            font-weight: 600;
            font-size: 1.1rem;
            flex: 1;
        }

    /* Employee Details Section */
    .details-section {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 250, 252, 0.9));
        border: 2px solid var(--danger-border);
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin: 2.5rem 0;
        animation: fadeInUp 0.6s ease-out 0.5s both;
    }

    .detail-item {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        margin: 0.75rem 0;
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.05), transparent);
        border-radius: var(--radius-md);
        border: 1px solid var(--danger-border);
        transition: var(--transition);
        animation: slideInLeft 0.6s ease-out forwards;
        opacity: 0;
    }

        .detail-item:nth-child(1) {
            animation-delay: 0.6s;
        }

        .detail-item:nth-child(2) {
            animation-delay: 0.7s;
        }

        .detail-item:nth-child(3) {
            animation-delay: 0.8s;
        }

        .detail-item:hover {
            transform: translateX(10px);
            box-shadow: var(--shadow-md);
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.08), rgba(239, 68, 68, 0.04));
        }

    .detail-label {
        flex: 0 0 200px;
        font-weight: 700;
        color: var(--text-primary);
        font-size: 1.1rem;
        position: relative;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .detail-label::before {
            content: '';
            width: 12px;
            height: 12px;
            background: var(--danger-color);
            border-radius: 50%;
            flex-shrink: 0;
            box-shadow: 0 0 10px var(--danger-color);
            animation: dangerPulseDot 2s infinite ease-in-out;
        }

        .detail-label i {
            color: var(--danger-color);
            font-size: 1.2rem;
            opacity: 0.8;
        }

    .detail-value {
        flex: 1;
        font-size: 1.2rem;
        color: var(--text-primary);
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        background: white;
        border-radius: var(--radius-sm);
        border: 2px solid var(--danger-light);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .detail-value::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 4px;
            background: var(--danger-color);
            border-radius: 2px 0 0 2px;
        }

    /* Confirmation Section */
    .confirmation-section {
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.05), rgba(239, 68, 68, 0.02));
        border: 2px dashed var(--danger-border);
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin: 2.5rem 0;
        animation: fadeIn 0.8s ease-out 0.9s both;
        text-align: center;
    }

    .confirmation-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--danger-color);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

        .confirmation-title i {
            font-size: 2rem;
            animation: warningSpin 3s infinite linear;
        }

    /* Confirmation Check */
    .confirmation-check {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: white;
        border-radius: var(--radius-lg);
        border: 2px solid var(--danger-light);
        margin: 1.5rem 0;
        transition: var(--transition);
        animation: confirmationBounce 0.6s ease-out 1s both;
    }

        .confirmation-check:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--danger-color);
        }

        .confirmation-check input[type="checkbox"] {
            width: 28px;
            height: 28px;
            accent-color: var(--danger-color);
            cursor: pointer;
            transform: scale(1.2);
            transition: var(--transition);
        }

            .confirmation-check input[type="checkbox"]:checked {
                transform: scale(1.4);
                animation: checkboxPop 0.3s ease-out;
            }

        .confirmation-check label {
            color: var(--text-primary);
            font-weight: 600;
            font-size: 1.2rem;
            cursor: pointer;
            flex: 1;
            text-align: left;
            transition: var(--transition);
        }

            .confirmation-check label:hover {
                color: var(--danger-color);
            }

    /* Button Container */
    .button-container {
        display: flex;
        gap: 1.5rem;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 2px solid var(--danger-light);
        animation: fadeInUp 0.6s ease-out 1.1s both;
    }

    /* Button Styling */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.25rem 2.5rem;
        font-size: 1.2rem;
        font-weight: 700;
        border: none;
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: var(--transition);
        text-decoration: none;
        position: relative;
        overflow: hidden;
        min-width: 200px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        box-shadow: var(--shadow-lg);
        transform-style: preserve-3d;
        perspective: 1000px;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.6s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn i {
            font-size: 1.5rem;
            transition: var(--transition);
        }

    /* Danger Button */
    .btn-danger {
        flex: 1;
        background: linear-gradient(135deg, var(--danger-color), var(--danger-dark));
        color: white;
        box-shadow: 0 10px 30px var(--danger-glow);
        animation: dangerGlow 2s infinite ease-in-out;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, var(--danger-dark), var(--danger-color));
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 20px 40px rgba(239, 68, 68, 0.4);
        }

        .btn-danger:active {
            transform: translateY(0) scale(0.98);
            animation: none;
        }

        .btn-danger:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none !important;
            animation: none !important;
            box-shadow: none !important;
        }

    /* Secondary Button */
    .btn-secondary {
        flex: 1;
        background: linear-gradient(135deg, var(--secondary-color), #4b5563);
        color: white;
        box-shadow: var(--shadow-md);
    }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #4b5563, #374151);
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

    /* Loading Animation */
    .btn.loading {
        position: relative;
        color: transparent;
    }

        .btn.loading::after {
            content: '';
            position: absolute;
            width: 28px;
            height: 28px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes expandLine {
        from {
            transform: scaleX(0);
        }

        to {
            transform: scaleX(1);
        }
    }

    @@keyframes dangerShimmer {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    @@keyframes floatBackground {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }

        50% {
            transform: translate(-20px, -20px) rotate(1deg);
        }

        100% {
            transform: translate(0, 0) rotate(0deg);
        }
    }

    @@keyframes warningFlash {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }
    }

    @@keyframes cardAppear {
        0% {
            opacity: 0;
            transform: translateY(50px) scale(0.9) rotateX(-10deg);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1) rotateX(0);
        }
    }

    @@keyframes pulseRing {
        0% {
            transform: translate(-50%, -50%) scale(0.8);
            opacity: 0.8;
        }

        100% {
            transform: translate(-50%, -50%) scale(1.2);
            opacity: 0;
        }
    }

    @@keyframes warningFloat {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    @@keyframes warningSpin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes warningSpinReverse {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(-360deg);
        }
    }

    @@keyframes warningPulse {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.1), 0 10px 25px rgba(239, 68, 68, 0.1);
        }

        50% {
            box-shadow: 0 0 0 15px rgba(239, 68, 68, 0), 0 15px 35px rgba(239, 68, 68, 0.2);
        }
    }

    @@keyframes warningBounce {
        0%, 100% {
            transform: translateY(-50%) scale(1);
        }

        50% {
            transform: translateY(-50%) scale(1.2);
        }
    }

    @@keyframes warningShake {
        0%, 100% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-10deg);
        }

        75% {
            transform: rotate(10deg);
        }
    }

    @@keyframes dangerPulseDot {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
            transform: scale(1);
        }

        50% {
            box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
            transform: scale(1.2);
        }
    }

    @@keyframes dangerGlow {
        0%, 100% {
            box-shadow: 0 10px 30px rgba(239, 68, 68, 0.3);
        }

        50% {
            box-shadow: 0 15px 40px rgba(239, 68, 68, 0.5);
        }
    }

    @@keyframes confirmationBounce {
        0% {
            opacity: 0;
            transform: translateY(30px) scale(0.9);
        }

        60% {
            transform: translateY(-10px) scale(1.05);
        }

        100% {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes checkboxPop {
        0% {
            transform: scale(1.2);
        }

        50% {
            transform: scale(1.6);
        }

        100% {
            transform: scale(1.4);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Ripple Effect */
    .ripple {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.6);
        transform: scale(0);
        animation: rippleEffect 0.6s linear;
        pointer-events: none;
    }

    @@keyframes rippleEffect {
        to {
            transform: scale(4);
            opacity: 0;
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        h1 {
            font-size: 2rem;
        }

            h1::after {
                position: relative;
                right: auto;
                left: 10px;
                top: auto;
                transform: none;
                display: inline-block;
            }

        .warning-card {
            padding: 2rem;
        }

        .warning-message {
            font-size: 1.25rem;
            padding: 1.5rem;
        }

        .warning-banner {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
            padding: 1.5rem;
        }

        .detail-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .detail-label {
            flex: 0 0 auto;
        }

        .button-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            min-width: auto;
        }

        .confirmation-check {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

            .confirmation-check label {
                text-align: center;
            }
    }

    @@media (max-width: 480px) {
        h1 {
            font-size: 1.75rem;
        }

        .warning-card {
            padding: 1.5rem;
        }

        .warning-message::before {
            display: none;
        }

        .warning-icon {
            width: 60px;
            height: 60px;
        }

            .warning-icon i {
                font-size: 2.5rem;
            }
    }

    /* Additional Stats Cards */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
        animation: fadeInUp 0.6s ease-out 0.6s both;
    }

    .stat-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 250, 252, 0.9));
        border: 2px solid var(--danger-border);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        text-align: center;
        transition: var(--transition);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

        .stat-card i {
            font-size: 2.5rem;
            color: var(--danger-color);
            margin-bottom: 1rem;
            display: block;
        }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 900;
