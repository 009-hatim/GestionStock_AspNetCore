@model IEnumerable<Gestion.Models.Product>

@{
    ViewData["Title"] = "Produits en Rupture de Stock";
    var totalRupture = Model.Count();
    var categoriesAffectees = Model.Select(p => p.Category?.Name).Distinct().Count();
    var valeurPerdue = Model.Sum(p => p.SalePrice * p.MinimumStock);
}

<!-- CSS Personnalisé -->
<style>
    :root {
        --danger: #ef4444;
        --warning: #f59e0b;
        --success: #10b981;
        --dark: #1e293b;
        --light: #f8fafc;
        --gray: #6b7280;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9fafb;
        color: var(--dark);
    }

    .container-main {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .header-section {
        margin-bottom: 2.5rem;
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .alert-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--danger);
        color: white;
        border-radius: 8px;
        font-weight: 600;
    }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        text-align: center;
        transition: transform 0.2s;
    }

        .stat-card:hover {
            transform: translateY(-3px);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--danger);
        margin: 0.5rem 0;
    }

    .stat-label {
        color: var(--gray);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .products-table {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        margin: 2rem 0;
    }

    .table-header {
        padding: 1.5rem;
        background: #f8fafc;
        border-bottom: 1px solid #e5e7eb;
    }

    .table-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }

    .table-content {
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #f9fafb;
    }

    th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 600;
        color: var(--gray);
        border-bottom: 1px solid #e5e7eb;
    }

    td {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    tbody tr:hover {
        background-color: #f9fafb;
    }

    .product-name {
        font-weight: 600;
        color: var(--dark);
    }

    .category-badge {
        padding: 0.25rem 0.75rem;
        background-color: #f3f4f6;
        color: var(--gray);
        border-radius: 6px;
        font-size: 0.875rem;
    }

    .out-of-stock {
        color: var(--danger);
        font-weight: 600;
    }

    .actions-section {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
    }

    .btn-primary {
        background-color: var(--danger);
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #dc2626;
            color: white;
        }

    .btn-secondary {
        background-color: #f3f4f6;
        color: var(--dark);
        border: 1px solid #d1d5db;
    }

        .btn-secondary:hover {
            background-color: #e5e7eb;
            color: var(--dark);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

        .empty-state i {
            font-size: 3rem;
            color: var(--success);
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: var(--success);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray);
            margin-bottom: 1.5rem;
        }

    .recommendations {
        margin-top: 2rem;
        padding: 1.5rem;
        background-color: #fffbeb;
        border-radius: 8px;
        border-left: 4px solid var(--warning);
    }

        .recommendations h6 {
            color: var(--warning);
            margin-bottom: 0.5rem;
        }

        .recommendations ul {
            margin: 0;
            padding-left: 1.5rem;
            color: var(--dark);
        }

    @@media (max-width: 768px) {
        .container-main

    {
        margin: 1rem auto;
    }

    .stats-container {
        grid-template-columns: 1fr;
    }

    .actions-section {
        flex-direction: column;
    }

    .btn {
        justify-content: center;
    }

    th, td {
        padding: 0.75rem 1rem;
    }

    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="container-main">
    <!-- En-tête -->
    <div class="header-section">
        <h1 class="page-title">
            <i class="bi bi-exclamation-triangle-fill me-2" style="color: var(--danger);"></i>
            Produits en Rupture de Stock
        </h1>
        @if (totalRupture > 0)
        {
            <div class="alert-badge">
                <i class="bi bi-exclamation-circle-fill me-1"></i>
                @totalRupture alerte@(totalRupture > 1 ? "s" : "")
            </div>
        }
    </div>

    @if (totalRupture > 0)
    {
        <!-- Statistiques -->
        <div class="stats-container">
            <div class="stat-card">
                <i class="bi bi-box-seam fs-4" style="color: var(--danger);"></i>
                <div class="stat-value">@totalRupture</div>
                <div class="stat-label">Produits en rupture</div>
            </div>

            <div class="stat-card">
                <i class="bi bi-tags fs-4" style="color: var(--danger);"></i>
                <div class="stat-value">@categoriesAffectees</div>
                <div class="stat-label">Catégories affectées</div>
            </div>

            <div class="stat-card">
                <i class="bi bi-cash-coin fs-4" style="color: var(--danger);"></i>
                <div class="stat-value">@valeurPerdue.ToString("N0") DH</div>
                <div class="stat-label">Ventes potentielles</div>
            </div>
        </div>

        <!-- Tableau des produits -->
        <div class="products-table">
            <div class="table-header">
                <h3 class="table-title">
                    <i class="bi bi-list-ul me-2"></i>
                    Liste des produits en rupture
                </h3>
            </div>
            <div class="table-content">
                <table>
                    <thead>
                        <tr>
                            <th>Nom du produit</th>
                            <th>Catégorie</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="product-name">
                                    <i class="bi bi-box me-2"></i>
                                    @p.Name
                                </td>
                                <td>
                                    <span class="category-badge">
                                        <i class="bi bi-tag me-1"></i>
                                        @(p.Category?.Name ?? "Non catégorisé")
                                    </span>
                                </td>
                                <td class="out-of-stock">
                                    <i class="bi bi-x-circle-fill me-1"></i>
                                    En rupture
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Recommandations -->
        <div class="recommendations">
            <h6><i class="bi bi-lightbulb-fill me-2"></i>Actions recommandées</h6>
            <ul>
                <li>Contacter les fournisseurs concernés</li>
                <li>Mettre à jour les délais de réapprovisionnement</li>
                <li>Informer l'équipe commerciale</li>
            </ul>
        </div>

        <!-- Boutons d'action -->
        <div class="actions-section">
            <a asp-controller="Supplier"
               asp-action="Details"
               asp-route-id="@Model.First().SupplierId"
               class="btn btn-primary">
                <i class="bi bi-truck"></i>
                Commander en urgence
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Retour aux produits
            </a>
        </div>
    }
    else
    {
        <!-- État vide -->
        <div class="empty-state">
            <i class="bi bi-check-circle-fill"></i>
            <h3>Aucun produit en rupture</h3>
            <p>Tous vos produits sont en stock. Excellent travail !</p>
            <div class="actions-section" style="border-top: none; justify-content: center; padding-top: 1rem;">
                <a href="#" class="btn btn-secondary">
                    <i class="bi bi-graph-up"></i>
                    Voir les statistiques
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Retour aux produits
                </a>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation simple pour les cartes de statistiques
        const statCards = document.querySelectorAll('.stat-card');
        statCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'opacity 0.5s, transform 0.5s';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 150);
        });
    });
</script>