@model IEnumerable<Gestion.Models.Product>

<!-- CSS Personnalisé -->
<style>
    :root {
        --danger: #ef4444;
        --warning: #f59e0b;
        --dark: #1e293b;
        --light: #f8fafc;
        --gray: #6b7280;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f9fafb;
        color: var(--dark);
    }

    .container-main {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .header-section {
        margin-bottom: 2.5rem;
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1rem;
    }

    .alert-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #fef3c7;
        color: #92400e;
        border-radius: 8px;
        font-weight: 600;
        border-left: 4px solid var(--warning);
    }

    .products-table {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .table-header {
        padding: 1.5rem;
        background: #f8fafc;
        border-bottom: 1px solid #e5e7eb;
    }

    .table-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }

    .table-content {
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #f9fafb;
    }

    th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 600;
        color: var(--gray);
        border-bottom: 1px solid #e5e7eb;
    }

    td {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
    }

    tbody tr:hover {
        background-color: #f9fafb;
    }

    .product-name {
        font-weight: 600;
        color: var(--dark);
    }

    .low-stock {
        color: var(--warning);
        font-weight: 600;
    }

    .stock-indicator {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        background-color: #fef3c7;
        color: #92400e;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--warning);
        color: white;
    }

        .btn-primary:hover {
            background-color: #d97706;
            color: white;
        }

    .btn-secondary {
        background-color: #f3f4f6;
        color: var(--dark);
        border: 1px solid #d1d5db;
    }

        .btn-secondary:hover {
            background-color: #e5e7eb;
            color: var(--dark);
        }

    .actions-section {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

        .empty-state i {
            font-size: 3rem;
            color: var(--warning);
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: var(--warning);
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray);
            margin-bottom: 1.5rem;
        }

    @@media (max-width: 768px) {
        .container-main {
            margin: 1rem auto;
        }

        .actions-section {
            flex-direction: column;
        }

        .btn {
            justify-content: center;
        }

        th, td {
            padding: 0.75rem 1rem;
        }
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="container-main">
    <!-- En-tête -->
    <div class="header-section">
        <h1 class="page-title">
            <i class="bi bi-exclamation-triangle-fill me-2" style="color: var(--warning);"></i>
            Produits en Stock Faible
        </h1>
        @if (Model.Any())
        {
            <div class="alert-badge">
                <i class="bi bi-exclamation-circle-fill me-1"></i>
                @Model.Count() produit@(Model.Count() > 1 ? "s" : "") nécessite@(Model.Count() > 1 ? "nt" : "") une attention
            </div>
        }
    </div>

    @if (Model.Any())
    {
        <!-- Tableau des produits -->
        <div class="products-table">
            <div class="table-header">
                <h3 class="table-title">
                    <i class="bi bi-list-ul me-2"></i>
                    Liste des produits
                </h3>
            </div>
            <div class="table-content">
                <table>
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Quantité</th>
                            <th>Stock Min.</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="product-name">
                                    <i class="bi bi-box me-2"></i>
                                    @p.Name
                                </td>
                                <td>@p.Quantity</td>
                                <td>@p.MinimumStock</td>
                                <td>
                                    <span class="stock-indicator">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                        Stock faible
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Boutons d'action -->
        <div class="actions-section">
            <a asp-controller="Supplier"
               asp-action="Details"
               asp-route-id="@Model.First().SupplierId"
               class="btn btn-primary">
                <i class="bi bi-truck"></i>
                Réapprovisionner
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Retour aux produits
            </a>
        </div>
    }
    else
    {
        <!-- État vide -->
        <div class="empty-state">
            <i class="bi bi-check-circle-fill"></i>
            <h3>Aucun produit en stock faible</h3>
            <p>Tous vos produits ont un stock suffisant.</p>
            <div class="actions-section" style="border-top: none; justify-content: center; padding-top: 1rem;">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Retour aux produits
                </a>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation pour les lignes du tableau
        const tableRows = document.querySelectorAll('tbody tr');
        tableRows.forEach((row, index) => {
            row.style.opacity = '0';
            row.style.transform = 'translateX(-20px)';

            setTimeout(() => {
                row.style.transition = 'opacity 0.3s, transform 0.3s';
                row.style.opacity = '1';
                row.style.transform = 'translateX(0)';
            }, index * 100);
        });
    });
</script>